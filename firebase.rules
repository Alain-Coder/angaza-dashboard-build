rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for all authenticated users
    // This is suitable for development but should be restricted in production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specifically for users collection - allow read/write for all authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Specifically for audit logs - allow read/write for all authenticated users
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }
  }
}